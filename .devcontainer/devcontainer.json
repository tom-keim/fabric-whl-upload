{
    "name": "Python 3.11 Dev Container",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "features": {},
    "postCreateCommand": "pip install ruff",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python"
            },
            "extensions": [    
                "ms-python.python",
                "charliermarsh.ruff"
            ]
        }
    }
}